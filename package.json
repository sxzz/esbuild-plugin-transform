{
  "name": "esbuild-plugin-transform",
  "version": "0.3.0",
  "packageManager": "pnpm@8.6.4",
  "description": "Pipe transformation plugins for esbuild.",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.json,.md",
    "lint:fix": "pnpm run lint -- --fix",
    "build": "tsup",
    "test": "vitest",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@sxzz/eslint-config-prettier": "^2.4.6",
    "@sxzz/eslint-config-ts": "^2.4.6",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "*",
    "bumpp": "^9.1.1",
    "esbuild": "^0.18.8",
    "eslint": "^8.43.0",
    "eslint-define-config": "^1.21.0",
    "fast-glob": "^3.2.12",
    "prettier": "^2.8.8",
    "tsup": "^7.1.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "engines": {
    "node": ">=14.19.0"
  }
}
